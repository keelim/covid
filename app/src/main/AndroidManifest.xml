<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keelim.coronakorea">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.keelim.coronakorea.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_coronavirus"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_coronavirus"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name="com.keelim.coronakorea.ui.MainActivity">
            <nav-graph android:value="@navigation/bottom_nav_graph" />
        </activity>

        <activity
            android:name="com.keelim.coronakorea.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>